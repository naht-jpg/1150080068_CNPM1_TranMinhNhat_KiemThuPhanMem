<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.baitap.controller.OrganizationController"
      spacing="10"
      prefWidth="500"
      prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Organization Management" style="-fx-font-size: 18px; -fx-font-weight: bold;">
        <font>
            <Font size="18"/>
        </font>
    </Label>

    <!-- Form Fields -->
    <GridPane hgap="10" vgap="10">
        <!-- Organization Name -->
        <Label text="Organization Name (*)" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1">
            <TextField fx:id="txtOrgName" prefWidth="300" promptText="Enter organization name"/>
            <Label fx:id="lblOrgNameError" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <!-- Address -->
        <Label text="Address" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="1">
            <TextField fx:id="txtAddress" prefWidth="300" promptText="Enter address"/>
            <Label fx:id="lblAddressError" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <!-- Phone -->
        <Label text="Phone" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="txtPhone" prefWidth="300" promptText="Enter phone (9-12 digits)"/>
            <Label fx:id="lblPhoneError" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <!-- Email -->
        <Label text="Email" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="3" GridPane.columnIndex="1">
            <TextField fx:id="txtEmail" prefWidth="300" promptText="Enter email"/>
            <Label fx:id="lblEmailError" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>
    </GridPane>

    <!-- Message Label -->
    <Label fx:id="lblMessage" style="-fx-font-size: 12px;"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnSave" text="Save" onAction="#handleSave" prefWidth="80" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="btnBack" text="Back" onAction="#handleBack" prefWidth="80"/>
        <Button fx:id="btnDirector" text="Director" onAction="#handleDirector" prefWidth="80"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>

</VBox>
