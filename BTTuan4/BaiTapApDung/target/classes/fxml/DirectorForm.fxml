<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.baitap.controller.DirectorController"
      spacing="15"
      prefWidth="400"
      prefHeight="280">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Director Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Organization ID:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="lblOrgId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Organization Name:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="lblOrgName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Address:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="lblAddress" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Phone:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="lblPhone" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Email:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="lblEmail" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <Button fx:id="btnClose" text="Close" onAction="#handleClose" prefWidth="80"/>

</VBox>
