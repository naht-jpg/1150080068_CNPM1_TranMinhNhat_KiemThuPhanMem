<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.baitap.controller.DirectorController"
      spacing="15"
      prefWidth="400"
      prefHeight="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Director Management" style="-fx-font-size: 18px; -fx-font-weight: bold;">
        <font>
            <Font size="18"/>
        </font>
    </Label>

    <!-- Organization Info -->
    <VBox spacing="5">
        <Label text="Organization:" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblOrgName" style="-fx-font-size: 14px;"/>
        <Label fx:id="lblOrgId" style="-fx-text-fill: gray;"/>
    </VBox>

    <!-- Placeholder for Director content -->
    <Label text="(Director management features will be added here)" style="-fx-text-fill: gray;"/>

</VBox>
